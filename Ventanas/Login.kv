<Login>:
    MDCard:
        padding: dp(10)
        elevation: 5
        orientation: "vertical"
        pos_hint: {"center_x":.5, "center_y":.5}
        size_hint: .5,.5
        FitImage:
            source: "Assets/Agua/agua.png"
        MDTextField:
            hint_text: "UserName"

        MDTextField:
            hint_text: "Password"
            password: True

        MDBoxLayout:
            orientation: "horizontal"
            adaptive_size: True
            spacing: dp(10)
            pos_hint: {"center_x":.5, "center_y":.5}
            MDRaisedButton:
                text: "Login"
                on_release: root.next('juego')
            MDRaisedButton:
                text: "Exit"